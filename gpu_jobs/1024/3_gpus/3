#!/bin/bash
#SBATCH --job-name=d2q9-openmp_gpu
#SBATCH --nodes=2
#SBATCH --ntasks-per-node 1
#SBATCH --gres=gpu:2
#SBATCH --partition gpu_veryshort
#SBATCH --time 00:01:00
#SBATCH --output d2q9-bgk_gpu_1024_3procs.out

echo Running on host `hostname`
echo Time is `date`
echo Directory is `pwd`
echo Slurm job ID is $SLURM_JOB_ID
echo This job runs on the following machines:
echo `echo $SLURM_JOB_NODELIST | uniq`

cd $SLURM_SUBMIT_DIR

mpirun -l -print-rank-map -ppn 1 -env CUDA_VISIBLE_DEVICES 0 ../../../d2q9-bgk_gpu2 ../../../input_1024x1024.params ../../../obstacles_1024x1024.dat : -env CUDA_VISIBLE_DEVICES 1 ../../../d2q9-bgk_gpu2 ../../../input_1024x1024.params ../../../obstacles_1024x1024.dat
